<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
                                                    android:background="@drawable/cart_background"
                                                   android:elevation="3dp"
                                                   android:layout_margin="10dp"
>

    <TextView
            android:text="TextView"
            android:textColor="#373b54"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtTitle" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="4dp"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/pizza1" android:id="@+id/imgFoodPic"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="0.0"
            android:textSize="18sp"
            android:textColor="#373b54"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtFee"
            app:layout_constraintTop_toBottomOf="@+id/imgFoodPic" app:layout_constraintEnd_toEndOf="@+id/imgFoodPic"
            app:layout_constraintStart_toStartOf="@+id/imgFoodPic"/>
    <TextView
            android:text="$"
            android:textColor="#FF3D00"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintEnd_toStartOf="@+id/txtFee"
            app:layout_constraintTop_toBottomOf="@+id/imgFoodPic" android:layout_marginEnd="3dp"/>
    <TextView
            android:text="+Add"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:id="@+id/txtAddButton"
            android:background="@drawable/orange_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtFee" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imgFoodPic" app:layout_constraintStart_toStartOf="@+id/imgFoodPic"/>
</androidx.constraintlayout.widget.ConstraintLayout>